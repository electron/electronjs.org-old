#!/usr/bin/env bash

set -x            # print commands before execution
set -o errexit    # always exit on error
set -o pipefail   # honor exit codes when piping
set -o nounset    # fail on unset variables

# clone the repo
git clone https://github.com/electron/electron.atom.io
cd electron.atom.io
npm install

# configure git
git config user.email "kevin+electronbot@github.com"
git config user.name "Electron Bot"

# run each build script independently and commit changes atomically
npm run build-releases
if [[ ! `git status --porcelain` ]]; then
  git add .
  git commit -m "update releases"
fi

npm run build-versions
if [[ ! `git status --porcelain` ]]; then
  git add .
  git commit -m "update versions"
fi

npm run build-docs
if [[ ! `git status --porcelain` ]]; then
  git add .
  git commit -m "update docs"
fi

npm run build-userland
if [[ ! `git status --porcelain` ]]; then
  git add .
  git commit -m "update userland"
fi

npm run build-apps
if [[ ! `git status --porcelain` ]]; then
  git add .
  git commit -m "update apps"
fi

# test it all before pushing
npm test
git push origin gh-pages
